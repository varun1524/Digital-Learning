    <RelativeLayout
        android:id="@+id/side_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_toRightOf="@+id/top_container"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:layout_centerVertical="true"
        >

        <ImageView
            android:id="@+id/sideshape1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:src="@drawable/rectangle"
            />

        <ImageView
            android:id="@+id/sideshape2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:src="@drawable/circle1"
            android:layout_below="@+id/sideshape1"
            />

        <ImageView
            android:id="@+id/sideshape3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="10dp"
            android:src="@drawable/triangle"
            android:layout_below="@+id/sideshape2"
            />

    </RelativeLayout>

</RelativeLayout>