<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    tools:context=".draganddrop"
    android:orientation="vertical"
    android:id="@+id/dropLayout"
    android:background="@drawable/bg_matchshapes"
    >

    <ImageButton
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="left"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="75dp"
        android:src="@drawable/ic_menu_back"
        android:background="@drawable/buttonselector4"
        android:id="@+id/btnback"
        />

    <RelativeLayout
        android:id="@+id/top_container"
        android:layout_width="550dp"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_match_blackboard"

        >

        <ImageView
            android:id="@+id/mshape1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginLeft="45dp"
            android:layout_marginBottom="55dp"
            android:src="@drawable/dragrectangle"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
        />

        <ImageView
            android:id="@+id/mshape2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_margin="35dp"
            android:src="@drawable/dragcircle"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            />

        <ImageView
            android:id="@+id/mshape3"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/dragtriangle"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="45dp"
            android:layout_marginBottom="55dp"
            />

    </RelativeLayout>
